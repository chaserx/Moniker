<% title "Moniker", false %>
<div class="span-8" id="formcolumn">
  <h3>Names</h3>
  <% form_tag(names_path, {:method => 'get', :class => "form"}) do %>
    <%= text_area_tag "namelist", params[:namelist], {:size => "30x10"} %>
    <%= label_tag :lastname, "Family Name" %>
    <%= text_field_tag "lastname", params[:lastname], :class => 'title' %>
    <%= submit_tag "Continue &rarr;", :disable_with => 'Submiting...' %> or <%= link_to "reset", root_path  %>

  <% end -%>
</div>
<div class="span-8" id="results">
  <h3>Results</h3>
  <div class="prepend-1">
    <% if !@names.empty? %>
      <% for name in @names %>
        <p><%= h name %> <%= h params[:lastname] %></p>
      <% end %>
    <% else %>
      <%= render :partial => "results" %>
    <% end %>
  </div>
</div>
<div class="span-8 last" id="rankings">
  <h3>Rankings</h3>
  <div class="prepend-1">
    <% if !@results.empty? %>
      <% for result in @results %>
        <p><%= h result.name %> #<span class="<%= h result.gender %>"><%= h result.rank %></span></p>
      <% end %>
    <% else %>
      <%= render :partial => "rankings" %>
    <% end %>
  </div>
</div>

